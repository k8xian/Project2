<div class="play">
    <div class="status">
        <div class="astronautLives">
            <div class="astronaut__block" id="astronautOne">
                <div class="astronaut__helmet"></div>
                <div class="astronaut__name">{{this.astronautOne}}</div>
            </div>
            <div class="astronaut__block" id="astronautTwo">
                <div class="astronaut__helmet"></div>
                <div class="astronaut__name">{{this.astronautTwo}}</div>
            </div>
            <div class="astronaut__block" id="astronautThree">
                <div class="astronaut__helmet"></div>
                <div class="astronaut__name">{{this.astronautThree}}</div>
            </div>
            <div class="astronaut__block" id="astronautFour">
                <div class="astronaut__helmet"></div>
                <div class="astronaut__name">{{this.astronautFour}}</div>
            </div>
        </div>
        <div class="oxygen">
        </div>
        <div class="fuel">
        </div>
    </div>
    <div class="checkpointOne">
        <div class="rocketGo"></div>
    </div>
    <div class="checkpointTwo">
        <div class="rocketGo"></div>
    </div>
    <div class="checkpointThree">
        <div class="rocketGo"></div>
    </div>
    <div class="update">
        <div class="statusBar__outer">
            <div class="statusBar__inner">
                <div class="statusBar__text" id="status">{{status}}</div>
            </div>
        </div>
    </div>
    <div class="controls">
        <div class="controlBar__content">
            <div class="controlBar__metrics">
                <div class="control__item">Days Travelled:</div>
                <div class="control__item">Sols Travelled:</div>
                <div class="control__item">Space Weather:</div>
                <div class="control__item">Oxygen:</div>
                <div class="control__item">Fuel:</div>
                <div class="control__item">Next Landmark:</div>
                <div class="control__item">km Travelled:</div>
                <div class="control__item">Speed:</div>
            </div>
            <div class="controlBar__data">
                <div class="control__item" id="earthDays">{{days}}</div>
                <div class="control__item" id="marsDays">{{sols}}</div>
                <div class="control__item" id="spaceWeather">{{spaceWeather}}</div>
                <div class="control__item" id="oxygen">{{oxygen}}</div>
                <div class="control__item" id="fuel">{{fuel}}</div>
                <div class="control__item" id="toCheckpoint">{{toCheckpoint}}</div>
                <div class="control__item" id="travelled">{{distance}}</div>
                <div class="control__item">
                    <div class="switch-field gameplay">
                        <input type="radio" id="switch_right" name="switch_2" value="fast" />
                        <label for="switch_right">fast</label>
                        <input type="radio" id="switch_left" name="switch_2" value="slow" checked />
                        <label for="switch_left">slow</label>
                    </div>
                </div>
            </div>
            <!-- add a save button here to work with api route to save current data -->
        </div>
    </div>
</div>

