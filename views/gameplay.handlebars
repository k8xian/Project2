        <a class="modal__choice" id="optionB">2.{{optionB}}</a>
        <a class="modal__choice" id="optionC">3.{{optionC}}</a>
    </div>
    <!-- END EVENT MODAL-->
    <div class="status">
        <div class="astronautLives">
            <div class="astronaut__block" id="astronautOne">
                <div class="astronaut__helmet"></div>
                <div class="astronaut__name">{{astronautOne}}</div>
            </div>
            <div class="astronaut__block" id="astronautTwo">
                <div class="astronaut__helmet"></div>
                <div class="astronaut__name">{{astronautTwo}}</div>
            </div>
            <div class="astronaut__block" id="astronautThree">
