{{!-- Fetch to retrieve space weather data --}}
<script type="text/javascript">
    var kIndex;
    var url = 'https://services.swpc.noaa.gov/products/noaa-planetary-k-index.json';

    var weatherReport = ['cold front', 'nippy', 'muggy', 'wear shorts', 'sunny w/ a high of uv', 'the electron shuffle', 'danger, stay indoors', 'seriously, who popped a sun spot', 'direct eye contact will cause death']

    fetch(url)
        .then(response => {
            return response.json();
        }).then(data => {
            // Work with JSON data here
            var spaceWeather = data[1];
            kIndex = spaceWeather[1];
            console.log(kIndex);
            $('#spaceWeather').text(weatherReport[kIndex]);
        }).catch(err => {
            // Do something for an error here
            throw err
        });

</script>